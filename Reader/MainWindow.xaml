<Window x:Class="Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reader"
        mc:Ignorable="d"
        Title="Text Reader" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Click="OpenFile_click" Margin="10" HorizontalAlignment="Left" Style="{StaticResource ButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Open File" VerticalAlignment="Center" Margin="5" FontSize="14"/>
            </StackPanel>
        </Button>

        <Grid Grid.Row="1" PreviewMouseWheel="ContentGrid_PreviewMouseWheel">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.9*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="0.05*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="0.05*"/>
                <RowDefinition Height="0.9*"/>
                <RowDefinition Height="0.05*"/>
            </Grid.RowDefinitions>

            <ScrollBar Name="MainScroll" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" 
                      Orientation="Vertical" Minimum="0" Maximum="{Binding MaxScroll}" Grid.ColumnSpan="2" Margin="13,0,10,0"
                      Value="{Binding ScrollPosition, Mode=TwoWay}" SmallChange="50" LargeChange="5000" ViewportSize="1000"/>

            <ItemsControl Grid.Column="1" Grid.Row="1" ItemsSource="{Binding VisibleLines}" Background="#1E1E1E">
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="Black" FontFamily="Consolas" FontSize="14" 
                                  TextWrapping="Wrap" Margin="0,2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.Template>
                    <ControlTemplate TargetType="ItemsControl">
                        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" 
                                     CanContentScroll="False" PanningMode="None" Focusable="False">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </ControlTemplate>
                </ItemsControl.Template>
                
            </ItemsControl>
        </Grid>

    </Grid>
</Window>
